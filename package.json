{
  "name": "koa-vue-notes-api",
  "version": "0.0.4",
  "description": "A SPA using Koa as the backend and Vue as the frontend.",
  "author": "John Datserakis",
  "private": false,
  "scripts": {
    "start": "node app.js",
    "watch": "nodemon --exec npm run start",
    "test": "npm run build; mocha --require 'babel-polyfill' --compilers js:babel-register",
    "build": "babel src -d build && npm run pretty",
    "pretty": "prettier --write --print-width 80 --single-quote --trailing-comma es5 --tab-width 4 'src/**/*.js' 'models/**/*.js' 'middleware/**/*.js' 'config/**/*.js'",
    "start-production": "pm2 start app.js --name='koa-vue-notes-api'",
    "clean": "npm run clean:dist && npm run clean:tmp"
  },
  "license": "MIT",
  "homepage": "https://github.com/OrKoN/koa2-example-app#readme",
  "dependencies": {
    "@sendgrid/mail": "6.0.0-beta.4",
    "babel-polyfill": "^6.5.0",
    "bcrypt": "^1.0.2",
    "date-fns": "^1.28.5",
    "dotenv": "^4.0.0",
    "fs-extra": "^4.0.0",
    "install": "^0.10.1",
    "ioredis": "^3.1.1",
    "joi": "^10.6.0",
    "jsonwebtoken": "^7.4.1",
    "kcors": "^2.0.0",
    "koa": "^2.0.0-alpha.3",
    "koa-bodyparser": "^3.0.0",
    "koa-json-error": "^3.1.2",
    "koa-jwt": "^3.2.2",
    "koa-ratelimit": "^4.0.0",
    "koa-router": "^7.0.1",
    "koa-useragent": "^1.0.0",
    "log4js": "^2.2.0",
    "npm": "^5.3.0",
    "pm2": "^2.6.1",
    "promise-mysql": "^3.0.2",
    "randexp": "^0.4.5"
  },
  "devDependencies": {
    "babel-cli": "^6.5.1",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-stage-3": "^6.5.0",
    "babel-register": "^6.9.0",
    "chai": "^3.5.0",
    "mocha": "^2.4.5",
    "nodemon": "^1.9.2",
    "prettier": "^1.5.3",
    "supertest": "^1.2.0"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-3"
    ]
  },
  "keywords": [
    "koa",
    "koa2",
    "api",
    "boilerplate",
    "vue",
    "spa"
  ]
}
